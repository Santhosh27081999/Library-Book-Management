@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<partial name="notification" />
<div class="container">
    <div class="row pt-4">
    <div class="col-6">Category List</div>
        <div class="col-6 text-end"> 
            <a asp-controller="Category" asp-action="create" class="btn btn-primary">Create Category</a>
            
        </div>
    </div>
</div>

<h1>Index Category</h1>
<table class="table table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>
        Category Name
        </th>
        <th>
           Display Order
        </th>
            </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                     <td>
                    @obj.DisplayOrder
                    </td>
                    <td>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">Edit Category</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">Delete Category</a>
                </td>
            </tr>
        }
    </tbody>
    



    
    </table>



