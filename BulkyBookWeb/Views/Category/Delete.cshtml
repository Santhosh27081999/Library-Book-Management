@model Category
<form method="post">
	<input asp-for="Id" Hidden />   
	<div class=" border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary text-black">Delete Category</h2>
			<hr />
		</div>
	</div>
	<div class="mb-2">
		<label asp-for="Name"> Name </label>
		<input asp-for="Name" class="form-control" autofocus disabled />
	</div>
	<div class="mb-2">
		<label asp-for="DisplayOrder">Display Order </label>
		<input asp-for="DisplayOrder" class="form-control"  disabled/>
	</div>

	<input type="submit" value="Delete" class="btn btn-primary" />
	<a asp-controller="Category" asp-action="index" class="btn btn-primary">Back to List</a>
</form>

